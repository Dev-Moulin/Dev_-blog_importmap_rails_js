<h1>Articles</h1>

<div data-controller="articles">
  <button data-action="click->articles#count" id="count-articles" class="btn btn-primary mb-3">Compter les articles</button>
  <div data-articles-target="count" id="article-count" class="alert alert-info mb-3"></div>

  <div id="articles">
    <div class="row">
      <% @articles.each do |article| %>
        <div class="col-md-4 mb-4 article-item">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title"><%= article.title %></h5>
              <p class="card-text"><%= truncate(article.content, length: 100) %></p>
              <p class="card-text"><small class="text-muted">Par <%= article.author %></small></p>
              <div class="btn-group">
                <%= link_to "Voir", article, class: "btn btn-primary" %>
                <%= link_to "Modifier", edit_article_path(article), class: "btn btn-warning" %>
                <%= button_to "Supprimer", article, method: :delete, class: "btn btn-danger", form: { data: { turbo_confirm: "Êtes-vous sûr ?" } } %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<%= link_to "Nouvel article", new_article_path, class: "btn btn-success mt-3" %> 